<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".AddEditNoteActivity">

    <EditText
        android:id="@+id/idEdtNoteName"
        android:layout_width="715dp"
        android:layout_height="59dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/gray"
        android:hint="Введите Название Заметки"
        android:textColor="#7864B1"
        android:textColorHint="#7864B1" />

    <EditText
        android:id="@+id/idEdtNoteDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/idBtn"
        android:layout_below="@id/idEdtNoteName"
        android:layout_margin="10dp"
        android:background="@color/gray"
        android:gravity="start|top"
        android:hint="Напишите Содержание Вашей Заметки"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textColor="#7864B1"
        android:textColorHint="#7864B1" />

    <Button
        android:id="@+id/idBtn"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_button_back"
        android:text="button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorLink="#524577"
        android:textSize="0sp" />

</RelativeLayout>